@model TinyCRM.Application.ViewModels.NaturalPerson.NaturalPersonViewModel

<form method="post">
    @Html.AntiForgeryToken()
    @if (Model != null)
    {
        <input asp-for="Id" type="hidden" />
    }
    <div class="card-body">
        <div asp-validation-summary="All"></div>

        <div class="form-group row mb-4">
            <label asp-for="Name" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
            <div class="col-sm-12 col-md-7">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="IdDocument" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
            <div class="col-sm-12 col-md-7">
                <input asp-for="IdDocument" class="form-control" />
                <span asp-validation-for="IdDocument"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="Birthday" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
            <div class="col-sm-12 col-md-7">
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="Gender" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
            <div class="col-sm-12 col-md-7">
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<TinyCRM.Domain.Entities.NaturalPerson.GenderType>()" class="form-control select2">
                    <option value="">-- Not specified --</option>
                </select>
                <span asp-validation-for="Gender"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="Email" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
            <div class="col-sm-12 col-md-7">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="Country" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
            <div class="col-sm-12 col-md-7">
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="ZipCode" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
            <div class="col-sm-12 col-md-7">
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="State" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
            <div class="col-sm-12 col-md-7">
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="City" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
            <div class="col-sm-12 col-md-7">
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="AddressLine1" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
            <div class="col-sm-12 col-md-7">
                <input asp-for="AddressLine1" class="form-control" />
                <span asp-validation-for="AddressLine1"></span>
            </div>
        </div>

        <div class="form-group row mb-4">
            <label asp-for="AddressLine2" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
            <div class="col-sm-12 col-md-7">
                <input asp-for="AddressLine2" class="form-control" />
                <span asp-validation-for="AddressLine2"></span>
            </div>
        </div>

    </div>

    <div class="card-footer text-right">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-link" asp-area="" asp-controller="NaturalPerson" asp-action="Index">Cancel</a>
    </div>
</form>