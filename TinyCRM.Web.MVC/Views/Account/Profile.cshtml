@model TinyCRM.Application.ViewModels.Account.ProfileViewModel

@{
    ViewData["Title"] = Localizer["ViewTitle"];
}

<section class="section">
    <div class="section-header">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="section-body">
        <div class="card">
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group row mb-4">
                        <label asp-for="CurrentUICulture" class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                        <div class="col-sm-12 col-md-7">
                            <select asp-for="CurrentUICulture"
                                    asp-items="@(new SelectList(Model.SupportedCultures,"Name","DisplayName"))" class="form-control select2">
                            </select>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button type="submit" class="btn btn-primary">@SharedLocalizer["SaveAction"]</button>
                </div>
            </form>
        </div>
    </div>
</section>
