@model TinyCRM.Application.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = Localizer["ViewTitle"];
}

<section class="section">
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                <div class="login-brand">TinyCRM</div>

                <div class="card card-primary">
                    <div class="card-header"><h4>@Localizer["LoginTitle"]</h4></div>
                    <div class="card-body">
                        <form method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="UserName"></label>
                                <input asp-for="UserName" class="form-control">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <div class="d-block">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                                    <label asp-for="RememberMe" class="custom-control-label"></label>
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="submit" class="btn btn-primary btn-lg btn-block" value="@Localizer["LoginSubmit"]">
                            </div>
                        </form>
                    </div>
                </div>
                <div class="mt-5 text-muted text-center">
                    @Localizer["NoAccount"] <a asp-area="" asp-action="Register">@Localizer["CreateOne"]</a>
                </div>
            </div>
        </div>
    </div>
</section>