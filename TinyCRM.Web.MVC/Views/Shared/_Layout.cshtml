<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TinyCRM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://demo.getstisla.com/assets/modules/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/lib/stisla/css/style.css">
    <link rel="stylesheet" href="~/lib/stisla/css/components.css">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="app">
        <div class="main-wrapper main-wrapper-1">

            <div class="navbar-bg"></div>
            <nav class="navbar navbar-expand-lg main-navbar">
                <form class="form-inline mr-auto">
                    <ul class="navbar-nav mr-3">
                        <li><a href="#" data-toggle="sidebar" class="nav-link nav-link-lg"><i class="fas fa-bars"></i></a></li>
                        <li><a href="#" data-toggle="search" class="nav-link nav-link-lg d-sm-none"><i class="fas fa-search"></i></a></li>
                    </ul>
                </form>
            </nav>

            <div class="main-sidebar sidebar-style-2">
                <aside id="sidebar-wrapper">
                    <div class="sidebar-brand">
                        <a asp-area="" asp-controller="Home" asp-action="Index">TinyCRM</a>
                    </div>
                    <div class="sidebar-brand sidebar-brand-sm">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Tiny</a>
                    </div>
                    <ul class="sidebar-menu">
                        <li class="menu-header">Main</li>
                        <li class="dropdown">
                            <a href="#" class="nav-link has-dropdown"><i class="fas fa-user-tie"></i><span>Natural Person</span></a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" asp-area="" asp-controller="NaturalPerson" asp-action="Create">New</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="NaturalPerson" asp-action="Index">All</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="nav-link has-dropdown"><i class="fas fa-building"></i><span>Legal Person</span></a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" asp-area="" asp-controller="LegalPerson" asp-action="Create">New</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="LegalPerson" asp-action="Index">All</a></li>
                            </ul>
                        </li>
                    </ul>
                </aside>
            </div>

            <!-- Main Content -->
            <div class="main-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="main-footer">
        <div class="footer-left">
            &copy; 2021 - TinyCRM
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/nicescroll/jquery.nicescroll.min.js"></script>
    <script src="~/lib/stisla/js/stisla.js"></script>
    <script src="~/lib/stisla/js/scripts.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
